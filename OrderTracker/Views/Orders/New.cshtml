@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
    <h1>Add a new Order for @Model.VendorName</h1>
  </div>

  <div class="card">
    <form action="/vendors/@Model.Id/orders" method="post">
      <input for="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <label class="top-margin" for="orderTitle">Title: </label>
      <input id="orderTitle" name="orderTitle" type="text" placeholder="Order Title Goes Here!">
      <label for="orderDescription">Description: </label>
      <input id="orderDescription" name="orderDescription" type="text" placeholder="Order Description Goes Here!">
      <label for="orderPrice">Price: </label>
      <input id="orderPrice" name="orderPrice" type="number" placeholder="Order Price Goes Here">
      <label for="orderDate">Date: </label>
      <input id="orderDate" name="orderDate" type="date" placeholder="Order Date Goes Here">
      <br>
      <button class="bottom btn-success" type="submit">Add Order!</button>
    </form>
  </div>
</div>