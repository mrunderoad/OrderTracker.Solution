@{
  Layout = "_Layout";
}
@using OrderTracker.Models;
<div class="container">
  <div class="jumbotron">
    <h1>Avaliable Vendors</h1>
  </div>

  @if (@Model.Count == 0)
  {
    <h3 class="none" >There are no Vendors to currently display. Please add a vendor!</h3>
  }

  @foreach (Vendor vendor in Model)
  {
    <h3 class="none"><a class="link" href='/vendors/@vendor.Id'>@vendor.VendorName</a></h3>
  }
</div>